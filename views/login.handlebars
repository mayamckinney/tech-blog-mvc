<div class="card w-75 mx-auto">
    <div class="card-header text-center">
      Login
    </div>
    <div class="card-body">
        <form>
            <div class="mb-3">
                <div class="form-text text-center mb-3">Don't have an account? <a href="#sign-up">Sign up instead!</a></div>
                <div class="input-group flex-nowrap mb-3">
                  <span class="input-group-text" id="addon-wrapping">@</span>
                  <input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="addon-wrapping" id="inputUsername">
                </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" class="form-control" id="inputPassword">
                <div class="form-text">Password must be at least 8 characters.</div>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
          </form>
    </div>
  </div>